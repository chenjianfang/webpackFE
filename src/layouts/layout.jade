//- 页面标题
mixin title(title)
    title= title
    if block
        block

doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0")
        each css in htmlWebpackPlugin.files.css
            link(rel='stylesheet',href='#{css}')
        block head
    body
        block content

        include ./libjs.jade
        each chunk in htmlWebpackPlugin.files.chunks
            script(type='text/javascript',src='#{chunk.entry}')



